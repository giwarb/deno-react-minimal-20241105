{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "test": "deno test --allow-env"
  },
  "compilerOptions": {
    "lib": ["dom", "esnext", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "unstable": ["sloppy-imports"],
  "lint": {
    "rules": {
      "exclude": [
        "no-sloppy-imports"
      ]
    }
  },
  "imports": {
    "@std/expect": "jsr:@std/expect@^1.0.7"
  }
}
